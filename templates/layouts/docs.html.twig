<!doctype html>
<html lang="nl">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <meta name="robots" content="noindex, nofollow">

  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/docs.css') }}">
  {% endblock %}

  <title>{% block title %}Documentatie{% endblock %}</title>
</head>
<body data-spy="scroll" data-target="#docs-navigation" data-offset="95">

<div id="wrapper">
  <div id="sidebar-wrapper">
    {{ menu|raw }}

    <footer class="text-center">
      <a href="https://sumocoders.be">
        <img src="/images/logo-sumo.svg" alt="Logo SumoCoders" />
      </a>
    </footer>
  </div>

  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <a href="#" id="toggle-sidebar" class="btn btn-secondary btn-sm" data-toggle="sidebar">Toggle Menu</a>
          {% block body %}
          {% endblock %}
        </div>
      </div>
    </div>
  </div>

</div>

{% block javascripts %}
  <script src="{{ asset('build/js/docs.js') }}"></script>
{% endblock %}
</body>
</html>
