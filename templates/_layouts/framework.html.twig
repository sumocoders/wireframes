<!doctype html>
<html lang="{{ app.request.locale }}">
{% include '_partials/framework/_head.twig.html' %}

<body class="">
{% include '_partials/framework/_old_browser.twig.html' %}

<div id="main-wrapper" class="main-wrapper">
  <div id="main-menu" class="main-menu" role="navigation">
    {% include '_partials/framework/_navigation.twig.html' %}
  </div>
  <div id="content-wrapper">
    <div class="main-header">
      <div class="sub-nav row">
        <div class="col-sm-6 col-md-4 col-alternative">
          <nav aria-label="breadcrumb">
            {% if block('breadcrumb') is defined %}
              <ol class="breadcrumb">
                {{ block('breadcrumb') }}
              </ol>
            {% endif %}
          </nav>
        </div>
        <div class="col-sm-6 col-md-8 col-alternative">
          <div class="user-nav">
            <div class="btn-group dropdown">
              <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <i class="fa fa-user-circle-o"></i>
                <span class="hidden-xs hidden-sm">{{ user.email }}</span>
                <span class="fa fa-chevron-right hidden-xs hidden-sm"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <a href="#">
                    {{ 'user.actions.settings'|trans|capitalize }}
                  </a>
                </li>
                <li><a href="/login">{{ 'user.actions.logout'|trans|capitalize }}</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="header-title">
      {% include '_partials/framework/_notifications.twig.html' %}
      <div class="header-title-bar">
        {% block header_title %}

        {% endblock %}
      </div>
    </div>
    {% if block('header_navigation') is defined %}
      <div class="actions clearfix">
        <div class="action-buttons">
          {{ block('header_navigation') }}
        </div>
      </div>
    {% endif %}
    <section id="main" class="main-content" role="main">
      <div class="container-fluid">
        {% block main %}

        {% endblock %}
      </div>
    </section>
  </div>
  <footer class="footer">
    {% block footer %}
      <div class="container-fluid">
        <div class="row hidden-md hidden-lg">
          <a href="#main-wrapper" class="pull-right back-to-top">
            <i class="fa fa-chevron-circle-up"></i> {{ 'core.interface.backToTop'|trans|capitalize }}
          </a>
        </div>
      </div>
    {% endblock %}
  </footer>
</div>

{% include '_partials/framework/_dialogs.twig.html' %}

{% block javascripts %}
  <script type="text/javascript" src="{{ asset('/build/js/app.js') }}"></script>
{% endblock %}
</body>
</html>
